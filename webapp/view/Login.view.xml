<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="ZAHR_PZEBDE.ZAHR_PZEBDE.controller.Login"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<pages>
			<Page title="{i18n>title}">
				<content>
					<VBox width="100%" direction="Column" alignContent="Center" alignItems="Center">
						<items>
							<Input xmlns="sap.m" value="123" id="inputTimeID" placeholder="Ausweisnummer" liveChange="onInputLiveChange" submit="onInputSubmit" required="true"
								type="Number" width="300px" fieldWidth="100%"/>
							<Button xmlns="sap.m" text="{i18n>Login}" press="onLogin" type="Emphasized" id="buttonLogin" width="300px"/>
						</items>
					</VBox>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>